<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/vertical_spacing"
    android:orientation="vertical"
    android:showDividers="middle"
    android:divider="@drawable/vertical_layout_divider"
    tools:context=".ReadSetFragment">

    <TextView
        android:id="@+id/read_set_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/title_text_size"
        android:text="Title (Placeholder)"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkLine"/>

    <TextView
        android:id="@+id/read_set_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/small_padding"
        android:paddingLeft="@dimen/small_padding"
        android:paddingRight="@dimen/small_padding"
        android:textSize="@dimen/detail_text_size"
        android:text="Description of set. This is a demo for the layout. (Placeholder)"/>

    <TextView
        android:id="@+id/read_set_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/medium_padding"
        android:paddingLeft="@dimen/medium_padding"
        android:paddingRight="@dimen/medium_padding"
        android:gravity="center"
        android:textSize="@dimen/detail_text_size"
        android:text="5 Terms  |  Created on January 20, 2017"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkLine"/>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/small_padding"
        android:paddingRight="@dimen/small_padding"
        android:paddingStart="@dimen/small_padding">

    </ListView>

</LinearLayout>
