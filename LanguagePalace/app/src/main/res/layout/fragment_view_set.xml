<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewSetFragment">

    <!--Using linear layout to keep title visible-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_set_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="32sp"
            android:paddingTop="8sp"
            android:textColor="@color/colorTitleText"
            android:text="Set Title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/view_set_number_of_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:gravity="center"
                android:paddingStart="6sp"
                android:paddingLeft="6sp"
                android:paddingRight="6sp"
                android:text="# Cards"/>
            <TextView
                android:id="@+id/view_set_last_viewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:maxLines="2"
                android:gravity="center"
                android:text="Last Viewed: Jan 17, 2017"/>
            <TextView
                android:id="@+id/view_set_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:maxLines="2"
                android:gravity="center"
                android:text="Created: Dec 26, 2016"/>
        </LinearLayout>

        <TextView
            android:id="@+id/view_set_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Put | Your | Tags | Here">

        </TextView>

        <ListView
            android:id="@+id/view_set_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>
